{% schema %}
{
  "name": "Banner principal",
  "settings": [
    {
      "type": "select",
      "id": "banner_width",
      "label": "Largura do Banner",
      "options": [
        {
          "value": "full",
          "label": "Full Width"
        },
        {
          "value": "normal",
          "label": "Normal Width"
        }
      ],
      "default": "full"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do Banner"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner principal",
      "category": "home"
    }
  ]
}
{% endschema %}

<div class="banner-container {% if section.settings.banner_width == 'full' %}banner-full{% else %}banner-normal{% endif %}">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% assign banner_link = block.settings.link %}
          {% if banner_link %}
            <a href="{{ banner_link }}">
          {% endif %}
            <picture>
              <source media="(max-width: 767px)" srcset="{{ block.settings.mobile_image | img_url: '1500x' }}">
              <img src="{{ block.settings.desktop_image | img_url: '2048x' }}" class="{% if section.settings.banner_width == 'full' %}full-width-img{% else %}normal-width-img{% endif %}" alt="Banner">
            </picture>
          {% if banner_link %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Navigation -->
    <div class="custom-navigation">
      <div class="swiper-button-next custom-next"></div>
      <div class="swiper-button-prev custom-prev"></div>
    </div>
  </div>
</div>

<style>
  .banner-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  .banner-full {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    overflow: hidden;
  }
  .banner-full .swiper-container {
    width: 100%;
  }
  .banner-normal {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
  }
  .banner-normal .swiper-container {
    width: 100%;
  }
  .swiper-pagination {
    z-index: 2;
  }
  .swiper-pagination-bullet-active {
    opacity: var(--swiper-pagination-bullet-opacity, 1);
    background: white;
  }
  .swiper-wrapper {
    display: flex;
  }
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide picture {
    width: 100%;
  }
  .full-width-img {
    width: 100vw !important;
  }
  .normal-width-img {
    width: 100% !important;
    max-width: 100%;
    height: auto;
    margin: 0 auto;
    margin-top: 12px!important;
  }
  .swiper-button-prev, .swiper-button-next {
    display: none;
  }
  .custom-prev, .custom-next {
    position: absolute;
    top: 50%;
    width: 30px;
    height: 30px;
    margin-top: -15px;
    z-index: 10;
    cursor: pointer;
    border: solid 1px {{ section.settings.arrow_color }};
    background-color: {{ section.settings.arrow_color }};
  }
  .custom-prev {
    left: 10px;
  }
  .custom-next {
    right: 10px;
  }
  .custom-prev::before, .custom-next::before {
    content: '';
    display: block;
    width: 0;
    height: 0;
    border-style: solid;
  }
  .custom-prev::before {
    border-width: 8px 12px 8px 0;
    border-color: transparent {{ section.settings.arrow_color }} transparent transparent;
  }
  .custom-next::before {
    border-width: 8px 0 8px 12px;
    border-color: transparent transparent transparent {{ section.settings.arrow_color }};
  }
  @media (max-width: 767px) {
    .banner-full, .banner-container {
      width: 100%;
      margin-left: 0;
    }
    .full-width-img {
      width: 100% !important;
    }
    .normal-width-img {
      width: 100% !important;
      max-width: 100%;
      height: auto;
      margin: 0 auto;
    }
  }
</style>

<script>
  var swiper = new Swiper('.swiper-container', {
    slidesPerView: 1,
    spaceBetween: 0,
    loop: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.custom-next',
      prevEl: '.custom-prev',
    },
  });
</script>
