{% schema %}
{
  "name": "Ícones Customizados",
  "settings": [],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Ícone e Texto",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Imagem do ícone"
        },
        {
          "type": "text",
          "id": "icon_text",
          "label": "Texto principal"
        },
        {
          "type": "text",
          "id": "icon_subtext",
          "label": "Subtexto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ícones Customizados",
      "category": "Custom"
    }
  ],
  "max_blocks": 3
}
{% endschema %}

<div class="custom-icons-section">
  <h2>{{ section.settings.section_title }}</h2>
  <div class="icons-wrapper">
    {% for block in section.blocks %}
      <div class="icon-block">
        <img src="{{ block.settings.icon_image | img_url: '300x300' }}" alt="{{ block.settings.icon_text }}" class="icon-image">
        <p class="icon-text">{{ block.settings.icon_text }}</p>
        <p class="icon-subtext">{{ block.settings.icon_subtext }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .custom-icons-section {
    text-align: center;
    position: relative;
    padding: 50px 0;
  }
  .icons-wrapper {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
    position: relative;
    z-index: 1;
  }
  .icon-block {
    text-align: center;
    margin: 5px;
    flex: 1 1 30%;
    box-sizing: border-box;
  }
  .icon-image {
    display: block;
    margin: 0 auto 10px;
    width: 6rem;
  }
  .icon-text {
    font-weight: bold;
    margin: -2px 0 -18px;
    color: black;
  }
  .icon-subtext {
    color: #777;
  }
  @media (max-width: 768px) {
    .icons-wrapper {
      flex-direction: column;
    }
    .icon-block {
      margin: 10px auto;
      width: 80%;
    }
</style>
