{% if settings.whatsapp_button_enable %}
  <link rel="stylesheet" href="https://cdn.positus.global/production/resources/robbu/whatsapp-button/whatsapp-button.css">
  <a id="robbu-whatsapp-button" target="_blank" href="https://api.whatsapp.com/send?phone={{ settings.whatsapp_number | remove: ' ' }}&text={{ settings.whatsapp_message | url_encode }}">
    <div class="rwb-tooltip">{{ settings.whatsapp_button_label }}</div>
    <img src="https://cdn.positus.global/production/resources/robbu/whatsapp-button/whatsapp-icon.svg">
  </a>
{% endif %}
